<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/movie_title_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="26sp"
        android:fontFamily="@font/monoton"
        android:letterSpacing="0.1"
        android:text="Avenger's: Infinity War"
        android:textSize="34sp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- layout for synopsis -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/synopsis_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="16sp"
                app:cardElevation="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/synopsis_title">

                <TextView
                    android:id="@+id/synopsis_text_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/orange"
                    android:paddingStart="18sp"
                    android:paddingTop="38sp"
                    android:paddingEnd="18sp"
                    android:paddingBottom="24sp"
                    android:text="@string/lorem"
                    android:textColor="#C9FFFFFF" />

            </com.google.android.material.card.MaterialCardView>
            <!-- layout for synopsis -->
            <TextView
                android:id="@+id/synopsis_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20sp"
                android:layout_marginStart="16sp"
                android:layout_marginEnd="16sp"
                android:background="@drawable/modal_title_gradient"
                android:elevation="10sp"
                android:fontFamily="@font/monoton"
                android:paddingStart="16sp"
                android:paddingTop="8sp"
                android:paddingEnd="16sp"
                android:paddingBottom="8sp"
                android:text="SYNOPSIS"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />



            <!-- layout for rating -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rating_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="16sp"
                app:cardElevation="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/rating_title">

                <TextView
                    android:id="@+id/rating_text_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/purple"
                    android:paddingStart="18sp"
                    android:paddingTop="38sp"
                    android:paddingEnd="18sp"
                    android:paddingBottom="24sp"
                    android:text="@string/lorem"
                    android:textColor="#C9FFFFFF" />

            </com.google.android.material.card.MaterialCardView>
            <!-- layout for rating title -->
            <TextView
                android:id="@+id/rating_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20sp"
                android:layout_marginStart="16sp"
                android:layout_marginEnd="16sp"
                android:background="@drawable/modal_title_gradient"
                android:elevation="10sp"
                android:fontFamily="@font/monoton"
                android:paddingStart="16sp"
                android:paddingTop="8sp"
                android:paddingEnd="16sp"
                android:paddingBottom="8sp"
                android:text="RATING"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/synopsis_card"
                app:layout_constraintVertical_bias="0.0" />




            <!--layout for credits card-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/credits_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                app:cardElevation="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/credits_titl" >

                <TextView
                    android:id="@+id/credit_text_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green"
                    android:paddingStart="18sp"
                    android:paddingTop="38sp"
                    android:paddingEnd="18sp"
                    android:paddingBottom="24sp"
                    android:text="@string/lorem"/>

            </com.google.android.material.card.MaterialCardView>
            <!--layout for credits title-->
            <TextView
                android:id="@+id/credits_titl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20sp"
                android:layout_marginStart="16sp"
                android:layout_marginEnd="16sp"
                android:text="CREDITS"
                android:fontFamily="@font/monoton"
                android:paddingStart="16sp"
                android:paddingTop="8sp"
                android:paddingEnd="16sp"
                android:paddingBottom="8sp"
                android:textSize="20sp"
                android:elevation="10sp"
                android:background="@drawable/modal_title_gradient"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rating_card" />


            <!--layout for similar flicks card-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/similar_flicks_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                app:cardElevation="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/similar_flicks_title" >

                <TextView
                    android:id="@+id/similar_flicks_text_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yellow"
                    android:paddingStart="18sp"
                    android:paddingTop="38sp"
                    android:paddingEnd="18sp"
                    android:paddingBottom="24sp"
                    android:text="@string/lorem"/>

            </com.google.android.material.card.MaterialCardView>
            <!--similar flicks title-->
            <TextView
                android:id="@+id/similar_flicks_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20sp"
                android:layout_marginStart="16sp"
                android:layout_marginEnd="16sp"
                android:text="SIMILAR  FLICKS"
                android:fontFamily="@font/monoton"
                android:paddingStart="16sp"
                android:paddingTop="8sp"
                android:paddingEnd="16sp"
                android:paddingBottom="8sp"
                android:textSize="20sp"
                android:elevation="10sp"
                android:background="@drawable/modal_title_gradient"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/credits_card"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
        
    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>